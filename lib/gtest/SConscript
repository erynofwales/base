import os.path

Import('env')
Import('build_env')


files = [
    'gtest-all.cc',
    'gtest-death-test.cc',
    'gtest-filepath.cc',
    'gtest-port.cc',
    'gtest-printers.cc',
    'gtest-test-part.cc',
    'gtest-typed-test.cc',
    'gtest.cc',
]

objs = []
for f in files:
    objs.append(env.Object(f))

include_dir = Dir('include').srcnode()
env.Append(CPPPATH=[include_dir])
build_env.Append(CPPPATH=[include_dir])

gtest = env.Library('gtest', objs)
